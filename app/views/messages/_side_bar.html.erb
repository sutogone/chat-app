<div class="side_bar_header"> 

  <div class="header_name">
    <%= link_to current_user.name, edit_user_path(current_user) %>  <%# link_to リンクの文字列, リンク先のパス %>
  </div>                                                            <%# 今回の場合、リンクの文字列は現在ログインしているuser,パスはuser情報のeditページ %>

  <div class="create_room">
    <%= link_to "チャットを作成する", new_room_path%>
  </div>

</div>


<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room_name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>